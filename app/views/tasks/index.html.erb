<div class="container">
  <div class="page-header">
    <h1>Listing Tasks</h1>
  </div>

  <table>
    <thead>
      <tr>
        <th style="font-size:18px">Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td id="task"><%= task.description %></td>
          <td id="task-button"><%= link_to 'Show', task %></td>
          <td id="task-button"><%= link_to 'Edit', edit_task_path(task) %></td>
          <td id="task-button"><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Task', new_task_path %>

</div>
