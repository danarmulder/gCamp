<div class="container">
  <div class="jumbotron">
    <h1>gCamp</h1>
    <p>Your life, organized.</p>
  </div>

  <div class="row">
    <div class="col-md-4">
      <%= image_tag 'guy_on_ipad.jpg', class: "img-responsive"%>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Tasks</h3>
        </div>
        <div class="panel-body", div id="home-panel">
          <p>Grouped by projects and lists.   Just the way you like 'em.</p>
          <p></p>
          <p></p>
          <p></p>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <%= image_tag 'yellow_shirt_guy.jpg', class: "img-responsive"%>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Documents</h3>
        </div>
        <div class="panel-body", div id="home-panel">
          <ul>
            <li>Upload</li>
            <li>Comment</li>
            <li>Revise</li>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <%= image_tag 'woman_on_iphone.jpg', class: "img-responsive"%>
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Comments</h3>
        </div>
        <div class="panel-body", div id="home-panel">
          <ul>
            <li>Comment on tasks and documents</li>
            <li>Get email notifications</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <p>
    <% @quotes.each do |quote| %>
        <p><%=quote[0]%></p>
        <p id="quote-author"><i><%=quote[1]%></i></p>
    <% end %>
  </p>

</div>
