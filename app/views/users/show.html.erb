<div class="container">
  <div class="page header">
    <div class="pull-right">
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-info" %>
    </div>
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>

    <br>
    <dl class="dl-horizontal">
      <dt><p>First name</dt> <dd><%= @user.first_name %></p></dd>
      <dt><p>Last name</dt> <dd><%= @user.last_name %></p></dd>
      <dt><p>Email</dt> <dd><a href="mailto:<%= @user.email %>"><%= @user.email %></a></p></dd>
    </dl>

</div>
