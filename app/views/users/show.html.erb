<div class="container">
  <div class="page header">
    <div class="pull-right">
      <%= link_to 'Edit', edit_user_path(@user), class: "btn btn-info" %>
    </div>
    <h2><%= @user.first_name %> <%= @user.last_name %></h2>

  <table class="table">
    <thead>
      <tr><th style="font-size:18px">Name</th></tr><td><%= @user.first_name %> <%= @user.last_name %></td>
      <tr><th style="font-size:18px">Email</th></tr><td><a href="mailto:<%= @user.email %>"><%= @user.email %></a></td>
      <tr><th colspan="10"></th></tr>
    </thead>

  </table>

</div>
