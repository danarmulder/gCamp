<div class="container">
  <div class="page-header">
    <h1>New User</h1>
  </div>
    <%= form_for(@user, html: {class: "form-horizantal"}) do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2>
            <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:
          </h2>
          <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="row">
        <div class="form-group">
          <%= f.label :first_name, class: "col-sm-2 control-label" %>
          <div class="col-sm-7">
          <%= f.text_field :first_name, class: "form-control" %>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="form-group">
          <%= f.label :last_name, class: "col-sm-2 control-label" %>
          <div class="col-sm-7">
          <%= f.text_field :last_name, class: "form-control" %>
          </div>
        </div>
      </div>
      <br>
      <div class="row">
        <div class="form-group">
          <%= f.label :email, class: "col-sm-2 control-label" %>
          <div class="col-sm-7">
          <%= f.email_field :email, class: "form-control" %>
          </div>
        </div>
      </div>

      <br>
      <div class="form-group col-sm-12 col-sm-offset-2">
        <%= f.submit class: "btn btn-primary"%>
        <%= link_to 'Cancel', tasks_path, class: "btn btn-default" %>
      </div>
    <% end %>

  </div>
